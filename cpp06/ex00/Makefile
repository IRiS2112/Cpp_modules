CPP = c++

FLAGS = -Wall -Wextra -Werror -std=c++98

NAME = convert

HDR = ScalarConverter.hpp \

SRC = main.cpp ScalarConverter.cpp \

OBJ = $(SRC:.cpp=.o)      

all : $(NAME)

$(NAME) : $(OBJ)
	$(CPP) $(FLAGS) $(OBJ) -o $(NAME)

%.o: %.cpp $(HDR)
	$(CPP) $(FLAGS) -c -o $@ $<

clean :
	rm -f $(OBJ)

fclean : clean
	rm -f $(NAME)
	
re : fclean all

.PHONY : all clean fclean re